<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        >
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="5dp"
                android:id="@+id/lnlayout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/bg_botron"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@id/lnlayout1"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp">

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/imgNavAva"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_user" />

            <LinearLayout
                android:id="@+id/lnlayout1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lnlayout"
                tools:layout_editor_absoluteX="0dp">

            </LinearLayout>

            <TextView
                app:layout_constraintTop_toBottomOf="@id/imgNavAva"
                app:layout_constraintLeft_toLeftOf="@id/imgNavAva"
                app:layout_constraintRight_toRightOf="@id/imgNavAva"
                android:id="@+id/txtName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Ẩn danh"
                android:textSize="20sp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btnCreatePost"
            android:textAllCaps="false"
            android:text="Bạn đang nghĩ gì?"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/botron_btn"
            app:backgroundTint="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_posts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.core.widget.NestedScrollView>